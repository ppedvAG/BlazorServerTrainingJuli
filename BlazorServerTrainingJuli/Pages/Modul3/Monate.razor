@page "/monate" 
<h3>Monate</h3>
<div class="container">
    <div class="row">
        <div class="col-6">
            ausgewählt: @Monat
        </div>
        <div class="col-6">
            <ul class="list-group">
                <li class="list-group-item active">Monate</li>
                @for (int i = 0; i < 12; i++)
                {
                    int x = i;
                    <li class="list-group-item" @onclick="()=>auswahl(x)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

@code {
    public string Monat { get; set; }
    void auswahl(int i)
    {
        Monat = DateTime.Now.AddMonths(i).ToString("MMMM");
    }

}
