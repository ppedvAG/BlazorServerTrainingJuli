@page "/Chat"
@inject ChatVM vm
<h3>Chat</h3>
<div class="row">
    <div class="col">
        <div class="input-group mb-3">
            <input type="text" class="form-control" @bind="neuMsg">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" @onclick="send">send</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <ul class="list-group list-group-flush">
            @foreach (var item in vm.ChatListe)
            {
                <li class="list-group-item">@item</li>
            }
        </ul>
    </div>
</div>

@code {
    public string neuMsg { get; set; }
    public void send()
    {
        vm.Add(neuMsg);


    }
    protected override void OnInitialized()
    {
        vm.onAdd +=()=> InvokeAsync( StateHasChanged);
    }
}
