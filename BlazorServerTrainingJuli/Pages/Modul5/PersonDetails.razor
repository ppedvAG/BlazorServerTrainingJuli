@page "/person"
<h3>PersonDetails</h3>
<EditForm  OnSubmit="save" EditContext="_editContext" >
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">

            <InputText class="form-control" @bind-Value="MyPerson.Name"></InputText>
            <ValidationMessage For="()=>MyPerson.Name"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">GebDat</label>
        <div class="col-sm-10">

            <InputDate class="form-control" @bind-Value="MyPerson.GebDat"></InputDate>
            <ValidationMessage For="()=>MyPerson.GebDat"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Größe</label>
        <div class="col-sm-10">

            <InputNumber class="form-control" @bind-Value="MyPerson.Gross"></InputNumber>
            <ValidationMessage For="()=>MyPerson.Gross"></ValidationMessage>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">save</button>
    <ValidationSummary></ValidationSummary>
</EditForm>
@code {
    public Person MyPerson { get; set; } = new Person();
    EditContext _editContext;
    void save()
    {


    }

    protected override void OnInitialized()
    {
        _editContext = new EditContext(MyPerson);
        _editContext.SetFieldCssClassProvider(new BoostrapErrorFixCSSprovider());
    }
}
